<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_centerInParent="true"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
     >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
             >

            <Button
                android:id="@+id/connectButton"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/test_item_height"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/test_item_margin"
                android:background="@color/white"
                android:gravity="center"
                android:text="选择设备并传送数据" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/test_item_height"
                android:layout_margin="@dimen/test_item_margin"
                
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:ems="10"
                    android:entries="@array/mode_apud" />

                <Button
                    android:id="@+id/Button02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="@string/sure" />
            </LinearLayout>

            <Button
                android:id="@+id/exitButton"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/test_item_height"
                android:layout_margin="@dimen/test_item_margin"
                android:background="@color/white"
                android:text="停止采集并退出" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/test_item_height"
                android:layout_margin="@dimen/test_item_margin"
             
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:hint="@string/send_rate"
                    android:textSize="10sp" >

                    <requestFocus />
                </EditText>

                <Button
                    android:id="@+id/button1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="@string/sure" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/test_item_height"
                android:layout_margin="@dimen/test_item_margin"
              
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/EditText01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:hint="@string/analysis_rate"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/Button01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="@string/sure" />
            </LinearLayout>

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/test_item_height"
                android:layout_margin="@dimen/test_item_margin"
                android:background="@color/white"
                android:text="点击开始计算平均值" />

            <Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/test_item_height"
                android:layout_margin="@dimen/test_item_margin"
                android:background="@color/white"
                android:text="清空平均值" />

            <Button
                android:id="@+id/clearShow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/test_item_height"
                android:layout_margin="@dimen/test_item_margin"
                android:background="@color/white"
                android:text="清空显示" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/test_item_height"
                android:layout_margin="@dimen/test_item_margin"
                android:background="@color/white"
                android:text="没有异常却报了异常请点击此处" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/test_item_height"
                android:layout_margin="@dimen/test_item_margin"
                android:background="@color/white"
                android:text="出现异常没有检测到请点击此处" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/test_item_height"
                android:layout_margin="@dimen/test_item_margin"
                android:background="@color/white"
                android:text="显示结果"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>